{
	"name": "@gftdcojp/effect-cypher",
	"version": "0.1.1",
	"description": "Type-safe, monadic Neo4j client using Effect and Cypher Builder",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"test": "vitest",
		"test:unit": "vitest tests/unit",
		"test:integration": "vitest tests/integration",
		"test:coverage": "vitest --coverage",
		"test:ci": "vitest tests/unit && vitest tests/integration",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down -v",
		"test:with-db": "pnpm run docker:up && sleep 10 && pnpm run test:ci && pnpm run docker:down",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"clean": "rm -rf dist",
		"prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test",
		"invariants:example": "node -e \"console.log('Run invariant checks against your Neo4j database')\"",
		"plan:record": "ts-node tools/plan-drift-detector.ts record",
		"plan:diff": "ts-node tools/plan-drift-detector.ts diff"
	},
	"keywords": [
		"neo4j",
		"cypher",
		"effect",
		"typescript",
		"type-safe",
		"monadic",
		"observable"
	],
	"author": "effect-cypher",
	"license": "MIT",
	"peerDependencies": {
		"effect": "^3.0.0"
	},
	"dependencies": {
		"@neo4j/cypher-builder": "^2.0.0",
		"neo4j-driver": "^5.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.0",
		"@types/node": "^20.0.0",
		"effect": "^3.0.0",
		"fast-check": "^3.0.0",
		"ts-node": "^10.0.0",
		"typescript": "^5.0.0",
		"vitest": "^1.0.0",
		"@vitest/coverage-v8": "^1.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gftdcojp/effect-cypher.git"
	},
	"homepage": "https://github.com/gftdcojp/effect-cypher#readme",
	"bugs": {
		"url": "https://github.com/gftdcojp/effect-cypher/issues"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.pkg.github.com"
	},
	"files": ["dist", "README.md", "LICENSE"]
}
